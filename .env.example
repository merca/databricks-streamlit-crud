# Databricks Connection Configuration
# Copy this file to .env and fill in your actual values

# Required: Your Databricks workspace hostname (without https://)
DATABRICKS_SERVER_HOSTNAME=your-workspace.cloud.databricks.com

# Required: SQL Warehouse HTTP path
# Format: /sql/1.0/warehouses/your-warehouse-id
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id

# Required: Personal Access Token or OAuth token
DATABRICKS_TOKEN=your-access-token-here

# Optional: Unity Catalog configuration (defaults provided)
UNITY_CATALOG_NAME=main
UNITY_SCHEMA_NAME=default
UNITY_TABLE_NAME=user_data

# Optional: Application settings
APP_TITLE=Databricks Unity Catalog CRUD App
APP_DEBUG=false